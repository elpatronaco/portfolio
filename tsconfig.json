{
  "compilerOptions": {
    "allowJs": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "baseUrl": ".",
    "target": "ESNext",
    "noImplicitAny": true,
    "incremental": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["app/*"],
      "@view/*": ["app/view/*"],
      "@/components": ["app/components/index.ts"],
      "@/helpers/*": ["app/helpers/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "dist/types/**/*.ts"]
}
